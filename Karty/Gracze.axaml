<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Karty.Gracze"
        Title="Gracze" Background="#2E8B57">

	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Lista graczy:" FontWeight="Bold"/>

		<ListBox x:Name="PlayerListBox" Height="200"/>

		<Button Content="Ustaw jako aktywnego gracza"
                Click="SetActivePlayer_Click"
                HorizontalAlignment="Left"
                Width="240"/>

		<StackPanel Orientation="Horizontal" Spacing="10">
			<TextBox x:Name="LoginTextBox" Width="200" Watermark="Login nowego gracza"/>
			<Button Content="Dodaj" Width="100" Click="AddPlayer_Click" Background="#8B0000" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2" CornerRadius="8"/>
		</StackPanel>

		<Button Content="Zamknij" Click="Close_Click" HorizontalAlignment="Right" Background="#8B0000" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2" CornerRadius="8"/>
	</StackPanel>
</Window>