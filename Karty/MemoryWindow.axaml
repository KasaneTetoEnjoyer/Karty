<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Karty.MemoryWindow"
        Title="Memory" Width="900" Height="900" Background="#1B1B1B">
	<Border Background="#2E8B57"
				CornerRadius="15"
				Padding="30"
				Margin="30"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
  <StackPanel Margin="10">
    <TextBlock Text="Memory" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
    <TextBlock Text="Znajdz wszystkie pary!" FontSize="20" HorizontalAlignment="Center" Margin="5"/>
    <UniformGrid Columns="4" Rows="4" x:Name="CardGrid" Margin="10"/>
	 
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Content="Restart" Click="Restart_Click" Width="150" Margin="5" Background="#8B0000" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2" CornerRadius="8"/>
      <TextBlock Text="Odkrycia: " FontSize="20"/>
      <TextBlock x:Name="MovesText" FontSize="20" Text="0"/>
    </StackPanel>

    <TextBlock x:Name="ResultText" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
  </StackPanel>
</Border>
</Window>
