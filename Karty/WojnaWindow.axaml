<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Karty.WojnaWindow"
      Title="Gra w Wojnę"
        Width="400" Height="700" Background="#1B1B1B">
	<Border Background="#2E8B57"
		   CornerRadius="15"
		   Padding="30"
		   Margin="30"
		   HorizontalAlignment="Center" 
		   VerticalAlignment="Center">
	<StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
		<TextBlock Name="ResultText" FontSize="20" TextAlignment="Center"/>
		<TextBlock Name="CardCountText" FontSize="16" TextAlignment="Center"/>

		<Image Name="PlayerCardImage" Width="100" Height="130"/>
		<Image Name="ComputerCardImage" Width="100" Height="130"/>

		<Button Content="Rozegraj turę" Click="PlayTurn_Click" Width="150" Background="#8B0000" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2" CornerRadius="8"/>
	</StackPanel>
	</Border>
</Window>